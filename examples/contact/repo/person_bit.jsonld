{
    "@context": "https://layeredschemas.org/ls.json",
    "@id": "http://example.org/Person/bit",
    "@type": "Overlay",
    "description": [
    "This overlay marks the firstName and lastName of a person with BIT (Blinding Identity Taxonomy) flags"
    ],
    "targetType": "http://example.org/Person",
    "layer": {
        "attributes": {
            "http://example.org/Person/firstName": {
                "@type": "Value",
                "http://example.org/privacyClassification": "http://example.org#BIT"
            },
            "http://example.org/Person/lastName": {
                "@type": "Value",
                "http://example.org/privacyClassification":"http://example.org#BIT"
            }
        }
    }
}
